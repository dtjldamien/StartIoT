config LINK_TYPE
    string "Linkage type, ROM or RAM"
    default "rom"

config ROM_START
    hex "rom start adddress"
    default 0x00000000

config ROM_SIZE
    hex "rom size"
    default 0x00000000

config RAM_START
    hex "ram start adddress"
    default 0x00000000

config RAM_SIZE
    hex "ram size"
    default 0x00000000

