CONFIG_STM32_HAL_H="stm32l4xx_hal.h"

CONFIG_LINK_TYPE="rom"

CONFIG_ROM_START=0x08000000
CONFIG_ROM_SIZE=0x00040000
CONFIG_RAM_START=0x20000000
CONFIG_RAM_SIZE=0x00010000

CONFIG_SYSTEM_CORE_CLOCK=80000000

# IDE KEIL support
CONFIG_KEIL_DEVICE="STM32L431RCTx"
CONFIG_KEIL_CPU="IRAM(0x20000000-0x2000FFFF) IROM(0x8000000-0x803FFFF) CLOCK(8000000) FPU2 CPUTYPE(\"Cortex-M4\")"

# uarts
CONFIG_STM32_UART1=y
CONFIG_STM32_UART1_TX_GPIOX=0
CONFIG_STM32_UART1_TX_PIN=9
CONFIG_STM32_UART1_RX_GPIOX=0
CONFIG_STM32_UART1_RX_PIN=10
CONFIG_STM32_UART1_AF=7
CONFIG_STM32_UART2=y
CONFIG_STM32_UART2_TX_GPIOX=0
CONFIG_STM32_UART2_TX_PIN=2
CONFIG_STM32_UART2_RX_GPIOX=0
CONFIG_STM32_UART2_RX_PIN=3
CONFIG_STM32_UART2_AF=7
CONFIG_STM32_UART3=y
CONFIG_STM32_UART3_TX_GPIOX=2
CONFIG_STM32_UART3_TX_PIN=4
CONFIG_STM32_UART3_RX_GPIOX=2
CONFIG_STM32_UART3_RX_PIN=5
CONFIG_STM32_UART3_AF=7
CONFIG_STM32_LPUART1=y
CONFIG_STM32_LPUART1_TX_GPIOX=2
CONFIG_STM32_LPUART1_TX_PIN=0
CONFIG_STM32_LPUART1_RX_GPIOX=2
CONFIG_STM32_LPUART1_RX_PIN=1
CONFIG_STM32_LPUART1_AF=8

# i2c devices
CONFIG_STM32_I2C1_SCL_GPIOX=1
CONFIG_STM32_I2C1_SCL_PIN=6
CONFIG_STM32_I2C1_SDA_GPIOX=1
CONFIG_STM32_I2C1_SDA_PIN=7
CONFIG_STM32_I2C1_AF=4
CONFIG_STM32_I2C2_SCL_GPIOX=1
CONFIG_STM32_I2C2_SCL_PIN=10
CONFIG_STM32_I2C2_SDA_GPIOX=1
CONFIG_STM32_I2C2_SDA_PIN=14
CONFIG_STM32_I2C2_AF=4
CONFIG_STM32_I2C3_SCL_GPIOX=0
CONFIG_STM32_I2C3_SCL_PIN=7
CONFIG_STM32_I2C3_SDA_GPIOX=1
CONFIG_STM32_I2C3_SDA_PIN=4
CONFIG_STM32_I2C3_AF=4

# system tick timer
CONFIG_TICK_TIMER_NAME="systick"
