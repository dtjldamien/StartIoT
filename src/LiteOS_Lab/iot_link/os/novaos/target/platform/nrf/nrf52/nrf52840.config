CONFIG_ROM_START=0x00000000
CONFIG_ROM_SIZE=0x00100000
CONFIG_RAM_START=0x20000000
CONFIG_RAM_SIZE=0x00040000

CONFIG_SYSTEM_CORE_CLOCK=64000000

# IDE KEIL support
CONFIG_KEIL_DEVICE="nRF52840_xxAA"
CONFIG_KEIL_CPU="IROM(0x00000000,0x80000) IRAM(0x20000000,0x10000) CPUTYPE(\"Cortex-M4\") FPU2 CLOCK(64000000) ELITTLE"

# IDE SESA support
CONFIG_SESA_DEVICE="nRF52840_xxAA"
CONFIG_SESA_INTERFACE="SWD"
CONFIG_SESA_SIMU_MEM_PARA="RX 00000000,00100000,FFFFFFFF;RWX 20000000,00040000,CDCDCDCD"

# uarts
CONFIG_NRF_UART0=y
CONFIG_NRF_UART0_REGBASE=0x40002000
CONFIG_NRF_UART0_IRQN=2
CONFIG_NRF_UART0_TX_PIN=6
CONFIG_NRF_UART0_RX_PIN=8

# rtcs
CONFIG_NRF_RTC0=y
CONFIG_NRF_RTC0_REGBASE=0x4000b000
CONFIG_NRF_RTC0_IRQN=11
CONFIG_NRF_RTC1=y
CONFIG_NRF_RTC1_REGBASE=0x40001100
CONFIG_NRF_RTC1_IRQN=17

# system tick timer
CONFIG_TICK_TIMER_NAME="rtc"
